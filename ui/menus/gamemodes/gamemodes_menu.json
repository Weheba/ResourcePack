{
    "namespace": "gamemodes-menu",
    "main@common-mineville.form_template": {
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#title_text - '@mineville/gamemodes_menu:')",
                "target_property_name": "#text"
            }
        ],
        "$content_controls": [
            {
                "content_panel": {
                    "type": "panel",
                    "controls": [
                        {
                            "scroll_panel@common.scrolling_panel": {
                                "$show_background": false,
                                "$scrolling_content": "gamemodes-menu.scroll_content",
                                "$scroll_box_touch_image_control": "common-mineville.scroll_box_touch_image_control",
                                "$scroll_box_mouse_image_control": "common-mineville.scroll_box_mouse_image_control",
                                "$scroll_size": [
                                    "5px",
                                    "100% - 12px"
                                ],
                                "$scrolling_pane_offset": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_left_padding_size": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_right_padding_size": [
                                    "8px",
                                    "0px"
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "scroll_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm + 10px"
        ],
        "controls": [
            {
                "scroll_panel": {
                    "type": "stack_panel",
                    "orientation": "vertical",
                    "collection_name": "form_buttons",
                    "size": [
                        "100% - 20px",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "first_padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "1.5px"
                                ]
                            }
                        },
                        {
                            "description@gamemodes-menu.description": {}
                        },
                        {
                            "second_padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "2px"
                                ]
                            }
                        },
                        {
                            "button_grid@gamemodes-menu.button_panel": {}
                        }
                    ]
                }
            }
        ]
    },
    "description": {
        "type": "panel",
        "collection_index": 50,
        "size": [
            "100%",
            "100%cm"
        ],
        "controls": [
            {
                "panel": {
                    "type": "panel",
                    "size": [
                        "100% + 5px",
                        "100%cm"
                    ],
                    "bindings": [
                        {
                            "binding_type": "collection_details",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_button_text = ''))",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "label_panel": {
                                "type": "panel",
                                "offset": [
                                    "4.5px",
                                    "0px"
                                ],
                                "size": [
                                    "100% - 10px",
                                    "100%cm"
                                ],
                                "controls": [
                                    {
                                        "label": {
                                            "type": "label",
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle",
                                            "text": "#text",
                                            "layer": 1,
                                            "shadow": true,
                                            "max_size": [
                                                "100% - 2px",
                                                "default"
                                            ],
                                            "bindings": [
                                                {
                                                    "binding_type": "collection",
                                                    "binding_collection_name": "form_buttons",
                                                    "binding_name": "#form_button_text",
                                                    "binding_name_override": "#text"
                                                }
                                            ],
                                            "controls": []
                                        }
                                    },
                                    {
                                        "background": {
                                            "type": "image",
                                            "texture": "textures/ui/common/light_field",
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle",
                                            "offset": [
                                                "-7px",
                                                "0px"
                                            ],
                                            "size": [
                                                "100% + 5px",
                                                "100%sm + 10px"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "gamemode_button": {
        "type": "panel",
        "size": [
            "33.3%",
            "100%cm + 5px"
        ],
        "controls": [
            {
                "button@common-mineville.form_button": {
                    "size": [
                        "100% - 5px",
                        "68px"
                    ],
                    "$hover_text_bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#hover_text"
                        }
                    ],
                    "$button_contents": [
                        {
                            "contents@gamemodes-menu.button_contents": {}
                        }
                    ]
                }
            }
        ]
    },
    "button_contents": {
        "type": "stack_panel",
        "orientation": "vertical",
        "anchor_from": "top_middle",
        "anchor_to": "top_middle",
        "layer": 1,
        "size": [
            "100% - 4px",
            "100% - 5px"
        ],
        "offset": [
            "0px",
            "2px"
        ],
        "controls": [
            {
                "icon_panel": {
                    "type": "panel",
                    "size": [
                        "100%",
                        "100%cm"
                    ],
                    "bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_texture"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_button_texture = ''))",
                            "target_property_name": "#visible"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_button_texture = 'loading'))",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "border": {
                                "type": "image",
                                "texture": "textures/ui/Black",
                                "size": [
                                    "100%",
                                    "100%sm + 2px"
                                ]
                            }
                        },
                        {
                            "image": {
                                "type": "image",
                                "size": [
                                    "100% - 2px",
                                    "52.22%x"
                                ],
                                "bindings": [
                                    {
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons",
                                        "binding_name": "#form_button_texture",
                                        "binding_name_override": "#texture"
                                    },
                                    {
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons",
                                        "binding_name": "#form_button_texture_file_system",
                                        "binding_name_override": "#texture_file_system"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "label_panel": {
                    "type": "panel",
                    "size": [
                        "100%",
                        "fill"
                    ],
                    "controls": [
                        {
                            "label": {
                                "type": "label",
                                "text": "#text",
                                "font_size": "small",
                                "text_alignment": "center",
                                "font_scale_factor": 1.5,
                                "max_size": [
                                    "100%",
                                    "100%"
                                ],
                                "bindings": [
                                    {
                                        "binding_name": "#form_button_text",
                                        "binding_name_override": "#text",
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "button_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "button_grid": {
                    "type": "grid",
                    "grid_item_template": "gamemodes-menu.gamemode_button",
                    "collection_name": "form_buttons",
                    "grid_fill_direction": "horizontal",
                    "grid_rescaling_type": "horizontal",
                    "size": [
                        "100% + 5px",
                        "100%c"
                    ],
                    "bindings": [
                        {
                            "binding_type": "view",
                            "binding_condition": "once",
                            "source_property_name": "(#form_text * 1)",
                            "target_property_name": "#maximum_grid_items"
                        }
                    ]
                }
            }
        ]
    }
}