{
    "namespace": "gamemodes-menu",
    "main@common-mineville.form_template": {
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#title_text - 'mineville@gamemodes_menu:')",
                "target_property_name": "#text"
            }
        ],
        "$content_controls": [
            {
                "content_panel": {
                    "type": "panel",
                    "size": [
                        "330px",
                        "190px"
                    ],
                    "controls": [
                        {
                            "stack_panel": {
                                "type": "stack_panel",
                                "orientation": "vertical",
                                "size": [
                                    "100% - 30px",
                                    "100% - 5px"
                                ],
                                "controls": [
                                    {
                                        "description@gamemodes-menu.description": {}
                                    },
                                    {
                                        "padding_one": {
                                            "type": "panel",
                                            "size": [
                                                "0px",
                                                "5px"
                                            ]
                                        }
                                    },
                                    {
                                        "button_grid@gamemodes-menu.button_panel": {}
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "description@common-mineville.field_template": {
        "$text": "#form_text",
        "$background_texture": "light",
        "$label_scale_factor": 1.5,
        "size": [
            "100%",
            "35px"
        ]
    },
    "gamemode_button": {
        "type": "panel",
        "size": [
            "33.3%",
            "73px"
        ],
        "controls": [
            {
                "button@common-mineville.button": {
                    "size": [
                        "100% - 5px",
                        "68px"
                    ],
                    "$hover_text_bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#hover_text"
                        }
                    ],
                    "$button_contents": [
                        {
                            "contents@gamemodes-menu.button_contents": {}
                        }
                    ],
                    "button_mappings": [
                        {
                            "from_button_id": "button.menu_select",
                            "to_button_id": "button.form_button_click",
                            "mapping_type": "pressed"
                        },
                        {
                            "from_button_id": "button.menu_ok",
                            "to_button_id": "button.form_button_click",
                            "mapping_type": "focused"
                        }
                    ],
                    "bindings": [
                        {
                            "binding_name": "#null",
                            "binding_type": "collection",
                            "binding_condition": "none",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_name": "#null",
                            "binding_type": "collection_details",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_name": "#form_button_text",
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons"
                        },
                        {
                            "binding_name": "#form_button_texture",
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons"
                        }
                    ]
                }
            }
        ]
    },
    "button_contents": {
        "type": "panel",
        "layer": 1,
        "controls": [
            {
                "icon_panel": {
                    "type": "panel",
                    "controls": [
                        {
                            "border": {
                                "type": "image",
                                "texture": "textures/ui/Black",
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    "0px",
                                    "2px"
                                ],
                                "size": [
                                    "100%sm + 2px",
                                    "50px"
                                ]
                            }
                        },
                        {
                            "image": {
                                "type": "image",
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    0,
                                    "-4px"
                                ],
                                "size": [
                                    "100% - 6px",
                                    "100% - 6px"
                                ],
                                "bindings": [
                                    {
                                        "binding_name": "#form_button_texture",
                                        "binding_name_override": "#texture",
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "label": {
                    "type": "label",
                    "text": "#text",
                    "font_size": "small",
                    "text_alignment": "center",
                    "font_scale_factor": 1.5,
                    "max_size": [
                        "100%",
                        20
                    ],
                    "offset": [
                        0,
                        "35%"
                    ],
                    "bindings": [
                        {
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#text",
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons"
                        }
                    ]
                }
            }
        ]
    },
    "button_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "button_grid": {
                    "type": "grid",
                    "grid_item_template": "gamemodes-menu.gamemode_button",
                    "collection_name": "form_buttons",
                    "grid_fill_direction": "horizontal",
                    "grid_rescaling_type": "horizontal",
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "size": [
                        "100% + 5px",
                        "100%c"
                    ],
                    "bindings": [
                        {
                            "binding_name": "#form_button_length",
                            "binding_name_override": "#maximum_grid_items"
                        }
                    ]
                }
            }
        ]
    }
}