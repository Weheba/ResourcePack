{
    "namespace": "gamemodes-menu",
    "main@common-mineville.form_template": {
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#title_text - '@mineville/gamemodes_menu:')",
                "target_property_name": "#text"
            }
        ],
        "$content_controls": [
            {
                "content_panel": {
                    "type": "panel",
                    "size": [
                        "330px",
                        "200px"
                    ],
                    "controls": [
                        {
                            "scroll_panel@common.scrolling_panel": {
                                "$show_background": false,
                                "$scrolling_content": "gamemodes-menu.scroll_content",
                                "$scroll_box_touch_image_control": "common-mineville.scroll_box_touch_image_control",
                                "$scroll_box_mouse_image_control": "common-mineville.scroll_box_mouse_image_control",
                                "$scroll_size": [
                                    "5px",
                                    "100% - 12px"
                                ],
                                "$scrolling_pane_size": [
                                    "100%",
                                    "100%"
                                ],
                                "$scrolling_pane_offset": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_left_padding_size": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_right_padding_size": [
                                    "8px",
                                    "0px"
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "scroll_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm + 10px"
        ],
        "controls": [
            {
                "scroll_panel": {
                    "type": "stack_panel",
                    "orientation": "vertical",
                    "size": [
                        "100% - 20px",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "first_padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "1.5px"
                                ]
                            }
                        },
                        {
                            "description@gamemodes-menu.description": {}
                        },
                        {
                            "second_padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "5px"
                                ]
                            }
                        },
                        {
                            "button_grid@gamemodes-menu.button_panel": {}
                        }
                    ]
                }
            }
        ]
    },
    "description@common-mineville.field_template": {
        "$text": "#form_text",
        "$background_texture": "light",
        "$label_scale_factor": 1.5,
        "size": [
            "100%",
            "35px"
        ]
    },
    "gamemode_button": {
        "type": "panel",
        "size": [
            "33.3%",
            "73px"
        ],
        "controls": [
            {
                "button@common-mineville.form_button": {
                    "size": [
                        "100% - 5px",
                        "68px"
                    ],
                    "$hover_text_bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#hover_text"
                        }
                    ],
                    "$button_contents": [
                        {
                            "contents@gamemodes-menu.button_contents": {}
                        }
                    ]
                }
            }
        ]
    },
    "button_contents": {
        "type": "panel",
        "layer": 1,
        "controls": [
            {
                "icon_panel": {
                    "type": "panel",
                    "bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_texture"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_button_texture = ''))",
                            "target_property_name": "#visible"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_button_texture = 'loading'))",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "border": {
                                "type": "image",
                                "texture": "textures/ui/Black",
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    "0px",
                                    "2px"
                                ],
                                "size": [
                                    "100%sm + 2px",
                                    "50px"
                                ]
                            }
                        },
                        {
                            "image": {
                                "type": "image",
                                "anchor_from": "top_middle",
                                "anchor_to": "top_middle",
                                "offset": [
                                    0,
                                    "-4px"
                                ],
                                "size": [
                                    "100% - 6px",
                                    "100% - 6px"
                                ],
                                "bindings": [
                                    {
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons",
                                        "binding_name": "#form_button_texture",
                                        "binding_name_override": "#texture"
                                    },
                                    {
                                        "binding_type": "collection",
                                        "binding_collection_name": "form_buttons",
                                        "binding_name": "#form_button_texture_file_system",
                                        "binding_name_override": "#texture_file_system"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "label": {
                    "type": "label",
                    "text": "#text",
                    "font_size": "small",
                    "text_alignment": "center",
                    "font_scale_factor": 1.5,
                    "max_size": [
                        "100%",
                        20
                    ],
                    "offset": [
                        0,
                        "35%"
                    ],
                    "bindings": [
                        {
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#text",
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons"
                        }
                    ]
                }
            }
        ]
    },
    "button_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%c"
        ],
        "controls": [
            {
                "button_grid": {
                    "type": "grid",
                    "grid_item_template": "gamemodes-menu.gamemode_button",
                    "collection_name": "form_buttons",
                    "grid_fill_direction": "horizontal",
                    "grid_rescaling_type": "horizontal",
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "size": [
                        "100% + 5px",
                        "100%c"
                    ],
                    "bindings": [
                        {
                            "binding_condition": "once",
                            "binding_name": "#form_button_length",
                            "binding_name_override": "#maximum_grid_items"
                        }
                    ]
                }
            }
        ]
    }
}