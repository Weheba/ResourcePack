{
    "namespace": "browser-ad",
    "main@common-mineville.form_template": {
        "$pc_size": [
            "224px",
            "200px"
        ],
        "$phone_size": [
            "153px",
            "160px"
        ],
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#title_text - '@mineville/browser_ad:')",
                "target_property_name": "#text"
            }
        ],
        "$content_controls": [
            {
                "content_panel": {
                    "type": "panel",
                    "controls": [
                        {
                            "scroll_panel@common.scrolling_panel": {
                                "$show_background": false,
                                "$scrolling_content": "browser-ad.scroll_content",
                                "$scroll_box_touch_image_control": "common-mineville.scroll_box_touch_image_control",
                                "$scroll_box_mouse_image_control": "common-mineville.scroll_box_mouse_image_control",
                                "$scroll_size": [
                                    "0px",
                                    "0px"
                                ],
                                "$scrolling_pane_offset": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_left_padding_size": [
                                    "0px",
                                    "0px"
                                ],
                                "$scroll_bar_right_padding_size": [
                                    "0px",
                                    "0px"
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "scroll_content": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm + 10px"
        ],
        "controls": [
            {
                "background": {
                    "type": "image",
                    "texture": "textures/ui/common/dark_field",
                    "size": [
                        "100% - 10px",
                        "100%cm + 10px"
                    ],
                    "controls": [
                        {
                            "scroll_panel": {
                                "type": "stack_panel",
                                "orientation": "vertical",
                                "collection_name": "form_buttons",
                                "size": [
                                    "100% - 10px",
                                    "100%c"
                                ],
                                "controls": [
                                    {
                                        "image@browser-ad.image": {
                                            "collection_index": 0
                                        }
                                    },
                                    {
                                        "first_padding": {
                                            "type": "panel",
                                            "size": [
                                                "0px",
                                                "5px"
                                            ]
                                        }
                                    },
                                    {
                                        "description@browser-ad.description": {}
                                    },
                                    {
                                        "second_padding": {
                                            "type": "panel",
                                            "size": [
                                                "0px",
                                                "5px"
                                            ]
                                        }
                                    },
                                    {
                                        "button@browser-ad.button": {
                                            "collection_index": 1
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "image": {
        "type": "image",
        "texture": "textures/ui/Black",
        "size": [
            "100%",
            "100%cm + 2px"
        ],
        "controls": [
            {
                "image": {
                    "type": "image",
                    "size": [
                        "100% - 2.5px",
                        "56.25%x"
                    ],
                    "bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_texture",
                            "binding_name_override": "#texture"
                        },
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_texture_file_system",
                            "binding_name_override": "#texture_file_system"
                        }
                    ]
                }
            }
        ]
    },
    "description": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm"
        ],
        "controls": [
            {
                "panel": {
                    "type": "panel",
                    "size": [
                        "100%",
                        "100%cm"
                    ],
                    "bindings": [
                        {
                            "binding_type": "view",
                            "source_property_name": "(not (#form_text = ''))",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "label_panel": {
                                "type": "panel",
                                "offset": [
                                    "4.5px",
                                    "0px"
                                ],
                                "size": [
                                    "100% - 5px",
                                    "100%cm"
                                ],
                                "controls": [
                                    {
                                        "label": {
                                            "type": "label",
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle",
                                            "text": "#form_text",
                                            "shadow": true,
                                            "layer": 1,
                                            "max_size": [
                                                "100% - 2px",
                                                "default"
                                            ],
                                            "controls": []
                                        }
                                    },
                                    {
                                        "background": {
                                            "type": "image",
                                            "texture": "textures/ui/common/light_field",
                                            "anchor_from": "left_middle",
                                            "anchor_to": "left_middle",
                                            "offset": [
                                                "-7px",
                                                "0px"
                                            ],
                                            "size": [
                                                "100% + 5px",
                                                "100%sm + 10px"
                                            ]
                                        }
                                    },
                                    {
                                        "padding": {
                                            "type": "panel",
                                            "size": [
                                                "0px",
                                                "2px"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "button@common-mineville.form_button": {
        "$button_color": "green",
        "size": [
            "100%",
            "30px"
        ],
        "$button_contents": [
            {
                "label": {
                    "type": "label",
                    "text": "#text",
                    "max_size": [
                        "100% - 5px",
                        "100% - 5px"
                    ],
                    "bindings": [
                        {
                            "binding_type": "collection",
                            "binding_collection_name": "form_buttons",
                            "binding_name": "#form_button_text",
                            "binding_name_override": "#text"
                        }
                    ]
                }
            }
        ]
    }
}