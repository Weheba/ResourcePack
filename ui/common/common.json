{
    "namespace": "common-mineville",
    "button": {
        "type": "button",
        "default_control": "default",
        "hover_control": "hover",
        "pressed_control": "pressed",
        "sound_name": "random.click",
        "$button_contents": [],
        "size": [
            "20px",
            "20px"
        ],
        "controls": [
            {
                "default": {
                    "type": "image",
                    "texture": "textures/ui/common/button/default",
                    "controls": "$button_contents"
                }
            },
            {
                "hover": {
                    "type": "image",
                    "texture": "textures/ui/common/button/hover",
                    "controls": "$button_contents"
                }
            },
            {
                "pressed": {
                    "type": "image",
                    "texture": "textures/ui/common/button/pressed",
                    "controls": [
                        {
                            "contents": {
                                "type": "panel",
                                "controls": "$button_contents",
                                "offset": [
                                    "0px",
                                    "1px"
                                ]
                            }
                        },
                        {
                            "overlay": {
                                "type": "image",
                                "texture": "textures/ui/Black",
                                "alpha": 0.3
                            }
                        }
                    ]
                }
            }
        ]
    },
    "close_button@common-mineville.button": {
        "size": [
            "19px",
            "19px"
        ],
        "button_mappings": [
            {
                "from_button_id": "button.menu_select",
                "to_button_id": "button.menu_exit",
                "mapping_type": "pressed"
            },
            {
                "from_button_id": "button.menu_ok",
                "to_button_id": "button.menu_exit",
                "mapping_type": "focused"
            }
        ],
        "$button_contents": [
            {
                "cross": {
                    "type": "image",
                    "texture": "textures/ui/common/cross",
                    "size": [
                        "100% - 12px",
                        "100% - 12px"
                    ],
                    "offset": [
                        "0px",
                        "-1px"
                    ]
                }
            }
        ]
    },
    "field_template": {
        "type": "panel",
        "$text": "",
        "$texture": "",
        "$background_texture": "dark",
        "$label_scale_factor": 1.0,
        "size": [
            "15px",
            "15px"
        ],
        "min_size": [
            "15px",
            "15px"
        ],
        "controls": [
            {
                "background": {
                    "type": "image",
                    "texture": "#texture",
                    "bindings": [
                        {
                            "binding_name": "#title_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#title_text - #title_text + 'textures/ui/common/' + $background_texture + '_field')",
                            "target_property_name": "#texture"
                        }
                    ]
                }
            },
            {
                "content": {
                    "type": "panel",
                    "size": [
                        "100%-2px",
                        "100%-2px"
                    ],
                    "controls": [
                        {
                            "label": {
                                "type": "label",
                                "text": "$text",
                                "shadow": true,
                                "font_scale_factor": "$label_scale_factor",
                                "max_size": [
                                    "100%",
                                    "100%"
                                ]
                            }
                        },
                        {
                            "image": {
                                "type": "image",
                                "texture": "$texture"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "form_template": {
        "type": "panel",
        "$content_controls": [],
        "size": [
            "100%cm",
            "100%cm"
        ],
        "offset": [
            "50%",
            "0px"
        ],
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#text + 'Hello World!')",
                "target_property_name": "#text"
            }
        ],
        "controls": [
            {
                "stack_panel": {
                    "type": "stack_panel",
                    "size": [
                        "100%c",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "upper_bar": {
                                "type": "stack_panel",
                                "orientation": "horizontal",
                                "size": [
                                    "100%sm",
                                    "19px"
                                ],
                                "controls": [
                                    {
                                        "bar": {
                                            "type": "panel",
                                            "size": [
                                                "100% - 21px",
                                                "default"
                                            ],
                                            "controls": [
                                                {
                                                    "image": {
                                                        "type": "image",
                                                        "texture": "textures/ui/common/button/hover"
                                                    }
                                                },
                                                {
                                                    "content": {
                                                        "type": "panel",
                                                        "controls": [
                                                            {
                                                                "logo": {
                                                                    "type": "image",
                                                                    "texture": "textures/ui/title",
                                                                    "anchor_from": "right_middle",
                                                                    "anchor_to": "right_middle",
                                                                    "size": [
                                                                        "70px",
                                                                        "100%"
                                                                    ],
                                                                    "offset": [
                                                                        "-2px",
                                                                        "-1px"
                                                                    ]
                                                                }
                                                            },
                                                            {
                                                                "title": {
                                                                    "type": "label",
                                                                    "text": "#text",
                                                                    "anchor_from": "left_middle",
                                                                    "anchor_to": "left_middle",
                                                                    "font_type": "MinecraftTen",
                                                                    "font_scale_factor": 1.2,
                                                                    "bindings": "$title_bindings",
                                                                    "max_size": [
                                                                        "100% - 75px",
                                                                        "20px"
                                                                    ],
                                                                    "offset": [
                                                                        "4px",
                                                                        "-2px"
                                                                    ]
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "padding": {
                                            "type": "panel",
                                            "size": [
                                                "2px",
                                                "0px"
                                            ]
                                        }
                                    },
                                    {
                                        "close_button@common-mineville.close_button": {}
                                    }
                                ]
                            }
                        },
                        {
                            "padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "2px"
                                ]
                            }
                        },
                        {
                            "form_content": {
                                "type": "panel",
                                "size": [
                                    "100%cm",
                                    "100%cm"
                                ],
                                "min_size": [
                                    "225px",
                                    "200px"
                                ],
                                "max_size": [
                                    "300px",
                                    "200px"
                                ],
                                "controls": [
                                    {
                                        "background": {
                                            "type": "image",
                                            "texture": "textures/ui/common/background",
                                            "size": [
                                                "100%sm + 10px",
                                                "100%sm + 10px"
                                            ]
                                        }
                                    },
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "anchor_from": "center",
                                            "anchor_to": "center",
                                            "layer": 1,
                                            "clips_children": true,
                                            "controls": "$content_controls",
                                            "size": [
                                                "100%c",
                                                "100%c"
                                            ],
                                            "max_size": [
                                                "290px",
                                                "190px"
                                            ],
                                            "min_size": [
                                                "215px",
                                                "190px"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}