{
    "namespace": "common-mineville",
    "button": {
        "type": "panel",
        "$button_id_name": "button.menu_ok",
        "$button_bindings": [],
        "$button_contents": [],
        "$hover_text_bindings": [],
        "size": [
            "20px",
            "20px"
        ],
        "controls": [
            {
                "button_control": {
                    "type": "button",
                    "focus_enabled": true,
                    "default_control": "default",
                    "hover_control": "hover",
                    "pressed_control": "pressed",
                    "locked_control": "locked",
                    "sound_name": "random.click",
                    "bindings": "$button_bindings",
                    "button_mappings": [
                        {
                            "from_button_id": "button.menu_select",
                            "to_button_id": "$button_id_name",
                            "mapping_type": "pressed"
                        },
                        {
                            "from_button_id": "button.menu_ok",
                            "to_button_id": "$button_id_name",
                            "mapping_type": "focused"
                        }
                    ],
                    "controls": [
                        {
                            "default": {
                                "type": "image",
                                "texture": "textures/ui/common/buttons/common/default",
                                "controls": "$button_contents"
                            }
                        },
                        {
                            "hover": {
                                "type": "image",
                                "texture": "textures/ui/common/buttons/common/hover",
                                "controls": [
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "controls": "$button_contents"
                                        }
                                    },
                                    {
                                        "hover_text": {
                                            "type": "custom",
                                            "renderer": "hover_text_renderer",
                                            "bindings": "$hover_text_bindings",
                                            "allow_clipping": false,
                                            "layer": 20
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "pressed": {
                                "type": "image",
                                "texture": "textures/ui/common/buttons/common/pressed",
                                "controls": [
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "controls": "$button_contents",
                                            "offset": [
                                                "0px",
                                                "1px"
                                            ]
                                        }
                                    },
                                    {
                                        "overlay": {
                                            "type": "image",
                                            "texture": "textures/ui/Black",
                                            "alpha": 0.3,
                                            "layer": 1
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "locked": {
                                "type": "image",
                                "texture": "textures/ui/common/buttons/common/pressed",
                                "controls": [
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "controls": "$button_contents",
                                            "offset": [
                                                "0px",
                                                "1px"
                                            ]
                                        }
                                    },
                                    {
                                        "overlay": {
                                            "type": "image",
                                            "texture": "textures/ui/Black",
                                            "alpha": 0.3,
                                            "layer": 1
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "close_button@common-mineville.button": {
        "$button_id_name": "button.menu_exit",
        "size": [
            "19px",
            "19px"
        ],
        "$button_contents": [
            {
                "cross": {
                    "type": "image",
                    "texture": "textures/ui/common/cross",
                    "size": [
                        "100% - 12px",
                        "100% - 12px"
                    ],
                    "offset": [
                        "0px",
                        "-1px"
                    ]
                }
            }
        ]
    },
    "empty_panel": {
        "type": "panel",
        "size": [
            "0px",
            "0px"
        ]
    },
    "form_button@common-mineville.button": {
        "$button_id_name": "button.form_button_click",
        "$button_bindings": [
            {
                "binding_name": "#null",
                "binding_type": "collection",
                "binding_condition": "none",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#null",
                "binding_type": "collection_details",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_texture",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_type": "view",
                "source_property_name": "((#form_button_text - '#locked') = #form_button_text)",
                "target_property_name": "#enabled"
            }
        ]
    },
    "field_button_template": {
        "type": "button",
        "$content_control": "common-mineville.empty_panel",
        "$visibility_keyword": "",
        "$background_texture": "light",
        "$label_scale_factor": 1.5,
        "$text_label": "",
        "size": [
            "30px",
            "30px"
        ],
        "bindings": [
            {
                "binding_name": "#null",
                "binding_type": "collection",
                "binding_condition": "none",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#null",
                "binding_type": "collection_details",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_text",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            },
            {
                "binding_name": "#form_button_texture",
                "binding_type": "collection",
                "binding_collection_name": "form_buttons"
            }
        ],
        "controls": [
            {
                "contents": {
                    "type": "panel",
                    "clips_children": true,
                    "max_size": [
                        "100%",
                        "100%"
                    ],
                    "controls": [
                        {
                            "background@common-mineville.field_template": {
                                "$text": "#form_button_text",
                                "size": [
                                    "100%",
                                    "100%"
                                ]
                            }
                        },
                        {
                            "panel": {
                                "type": "panel",
                                "bindings": [
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(not ((#form_button_text - $visibility_keyword) = #form_button_text))",
                                        "target_property_name": "#visible"
                                    }
                                ],
                                "controls": [
                                    {
                                        "content@$content_control": {}
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "field_template": {
        "type": "panel",
        "$text": "",
        "$texture": "",
        "$localize_label": true,
        "$background_texture": "dark",
        "$label_scale_factor": 1.0,
        "size": [
            "15px",
            "15px"
        ],
        "min_size": [
            "15px",
            "15px"
        ],
        "controls": [
            {
                "background": {
                    "type": "image",
                    "texture": "#texture",
                    "bindings": [
                        {
                            "binding_name": "#title_text"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#title_text - #title_text + 'textures/ui/common/' + $background_texture + '_field')",
                            "target_property_name": "#texture"
                        }
                    ]
                }
            },
            {
                "content": {
                    "type": "panel",
                    "size": [
                        "100%-2px",
                        "100%-2px"
                    ],
                    "controls": [
                        {
                            "label": {
                                "type": "label",
                                "text": "$text",
                                "shadow": true,
                                "localize": "$localize_label",
                                "font_scale_factor": "$label_scale_factor",
                                "font_size": "small",
                                "max_size": [
                                    "100%",
                                    "100%"
                                ]
                            }
                        },
                        {
                            "image": {
                                "type": "image",
                                "texture": "$texture"
                            }
                        }
                    ]
                }
            }
        ]
    },
    "form_template": {
        "type": "panel",
        "$content_controls": [],
        "$content_offset": [
            "0px",
            "4.5px"
        ],
        "$pc_size": [
            "330px",
            "200px"
        ],
        "$phone_size": [
            "330px",
            "160px"
        ],
        "size": [
            "100%cm",
            "100%cm"
        ],
        "$title_bindings": [
            {
                "binding_type": "view",
                "source_property_name": "(#text + 'Hello World!')",
                "target_property_name": "#text"
            }
        ],
        "controls": [
            {
                "stack_panel": {
                    "type": "stack_panel",
                    "size": [
                        "100%cm",
                        "100%c"
                    ],
                    "controls": [
                        {
                            "upper_bar": {
                                "type": "stack_panel",
                                "orientation": "horizontal",
                                "size": [
                                    "100%sm",
                                    "19px"
                                ],
                                "controls": [
                                    {
                                        "bar": {
                                            "type": "panel",
                                            "size": [
                                                "100% - 21px",
                                                "default"
                                            ],
                                            "controls": [
                                                {
                                                    "image": {
                                                        "type": "image",
                                                        "texture": "textures/ui/common/buttons/common/hover"
                                                    }
                                                },
                                                {
                                                    "content": {
                                                        "type": "panel",
                                                        "controls": [
                                                            {
                                                                "logo": {
                                                                    "type": "image",
                                                                    "texture": "textures/ui/title",
                                                                    "anchor_from": "right_middle",
                                                                    "anchor_to": "right_middle",
                                                                    "size": [
                                                                        "70px",
                                                                        "100%"
                                                                    ],
                                                                    "offset": [
                                                                        "-2px",
                                                                        "-1px"
                                                                    ]
                                                                }
                                                            },
                                                            {
                                                                "title": {
                                                                    "type": "label",
                                                                    "text": "#text",
                                                                    "anchor_from": "left_middle",
                                                                    "anchor_to": "left_middle",
                                                                    "font_type": "MinecraftTen",
                                                                    "font_scale_factor": 1.2,
                                                                    "localize": true,
                                                                    "bindings": "$title_bindings",
                                                                    "max_size": [
                                                                        "100% - 75px",
                                                                        "20px"
                                                                    ],
                                                                    "offset": [
                                                                        "4px",
                                                                        "-2px"
                                                                    ]
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    },
                                    {
                                        "padding": {
                                            "type": "panel",
                                            "size": [
                                                "2px",
                                                "0px"
                                            ]
                                        }
                                    },
                                    {
                                        "close_button@common-mineville.close_button": {}
                                    }
                                ]
                            }
                        },
                        {
                            "padding": {
                                "type": "panel",
                                "size": [
                                    "0px",
                                    "2px"
                                ]
                            }
                        },
                        {
                            "pc_form_content": {
                                "type": "panel",
                                "visible": "(not $touch)",
                                // "visible": "$touch",
                                "size": [
                                    "100%cm",
                                    "100%cm"
                                ],
                                "min_size": [
                                    "225px",
                                    "170px"
                                ],
                                "max_size": [
                                    "340px",
                                    "210px"
                                ],
                                "controls": [
                                    {
                                        "background": {
                                            "type": "image",
                                            "texture": "textures/ui/common/background",
                                            "size": [
                                                "100%sm + 10px",
                                                "100%sm + 11px"
                                            ]
                                        }
                                    },
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "anchor_from": "top_middle",
                                            "anchor_to": "top_middle",
                                            "layer": 1,
                                            "clips_children": true,
                                            "controls": "$content_controls",
                                            "offset": "$content_offset",
                                            "size": "$pc_size",
                                            "min_size": [
                                                "215px",
                                                "160px"
                                            ],
                                            "max_size": [
                                                "330px",
                                                "200px"
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "mobile_form_content": {
                                "type": "panel",
                                "visible": "$touch",
                                // "visible": "(not $touch)",
                                "size": [
                                    "100%cm",
                                    "170px"
                                ],
                                "min_size": [
                                    "225px",
                                    "150px"
                                ],
                                "max_size": [
                                    "340px",
                                    "170px"
                                ],
                                "controls": [
                                    {
                                        "background": {
                                            "type": "image",
                                            "texture": "textures/ui/common/background",
                                            "size": [
                                                "100%sm + 10px",
                                                "100%sm + 11px"
                                            ]
                                        }
                                    },
                                    {
                                        "contents": {
                                            "type": "panel",
                                            "anchor_from": "top_middle",
                                            "anchor_to": "top_middle",
                                            "layer": 1,
                                            "clips_children": true,
                                            "controls": "$content_controls",
                                            "offset": [
                                                "0px",
                                                "4.5px"
                                            ],
                                            "size": "$phone_size",
                                            "min_size": [
                                                "215px",
                                                "140px"
                                            ],
                                            "max_size": [
                                                "330px",
                                                "160px"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    },
    "scroll_box_mouse_image_control": {
        "type": "image",
        "texture": "textures/ui/common/scroll_box",
        "layer": 3,
        "alpha": "@common.anim_scrollbar_box_fadeout"
    },
    "scroll_box_touch_image_control": {
        "type": "image",
        "texture": "textures/ui/common/scroll_box",
        "layer": 3,
        "alpha": "@common.anim_scrollbar_box_fadeout"
    }
}